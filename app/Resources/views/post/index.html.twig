
{% block body %}
<section class="content-header">
  <h1>
    Listado de posts
    <small>Vista previa</small>
  </h1>
</section>

<section class="content">
  <div class="row">
        {% for post in posts %}
        <div class="col-md-12">
          <div class="box box-widget">
            <div class="box-header with-border">
              <div class="user-block">
                <span style="margin-left:0px!important;" class="username">{{ post.title }}</span>
                <span style="margin-left:0px!important;"  class="description">Creado por {{ post.postedBy }} - <b>CATEGORIA: {{post.category}}</b> </span>
              </div>
            </div>
            <div class="box-body">
              <p>{{ post.content }}</p>
              <a href="{{ path('post_show', { 'id': post.id }) }}" type="button" class="btn btn-default btn-xs"><i class="fa fa-eye"></i> Ver</a>
              <a href="{{ path('post_edit', { 'id': post.id }) }}" type="button" class="btn btn-default btn-xs"><i class="fa fa-edit"></i> Editar</a>
              <span class="pull-right text-muted">{{ post.createdAt }}</span>
            </div>
          </div>
        </div>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
