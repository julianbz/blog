{% extends 'base.html.twig' %}

{% block body %}

<div class="row">

  <!-- /.col (left) -->
  <div class="col-md-6">
    <div class="box box-primary">
      <div class="box-header">
        <h3 class="box-title">Editar post</h3>
      </div>
      <div class="box-body">
        {{ form_start(edit_form) }}
        <div class="form-group">
            <label for="exampleInputEmail1">Titulo:</label>
            {{ form_widget(edit_form.title, { 'attr': {'class': 'form-control', 'placeholder': 'Ingrese  titulo'|trans } }) }}
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Contenido:</label>
            {{ form_widget(edit_form.content, { 'attr': {'class': 'form-control', 'placeholder': 'Ingrese contenido'|trans } }) }}
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Categoria:</label>
                {{ form_widget(edit_form.category, { 'attr': {'class': 'form-control', 'placeholder': 'Seleccione'|trans } }) }}
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Creado por:</label>
                {{ form_widget(edit_form.postedBy, { 'attr': {'class': 'form-control', 'placeholder': 'Ingrese  su nombre'|trans } }) }}
        </div>

        {{form_rest(edit_form)}}

        <p>
        {{form_errors(edit_form)}}
        </p>
        <div class="box-footer">
            <input class="btn btn-block btn-success" type="submit" value="Guardar" />

            <a style="margin-bottom:6px;" class="btn btn-block btn-warning" href="{{ path('post_index') }}">Volver</a>

        {{ form_end(edit_form) }}

        {{ form_start(delete_form) }}
        <input class="btn btn-block btn-danger" type="submit" value="Eliminar">
        {{ form_end(delete_form) }}

      </div>

      </div>
    </div>
  </div>
</div>
{% endblock %}
