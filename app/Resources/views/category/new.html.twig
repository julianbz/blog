{% extends 'base.html.twig' %}

{% block body %}

<div class="row">

  <!-- /.col (left) -->
  <div class="col-md-6">
    <div class="box box-primary">
      <div class="box-header">
        <h3 class="box-title">Crear categoria</h3>
      </div>
      <div class="box-body">
        {{ form_start(form) }}
        <div class="form-group">
            <label for="exampleInputEmail1">Nombre:</label>
            {{ form_widget(form.name, { 'attr': {'class': 'form-control', 'placeholder': 'Ingrese  categoria'|trans } }) }}
        </div>

        {{form_rest(form)}}
        <p>
        {{form_errors(form)}}
        </p>
        <div class="box-footer">
            <input class="btn btn-block btn-success" type="submit" value="Crear" />
            <a class="btn btn-block btn-warning" href="{{ path('post_index') }}">Volver</a>

            <br>
        </div>
        {{ form_end(form) }}

      </div>
    </div>
  </div>
</div>

{% endblock %}
